{% extends "layout.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="compliance-overview">
    <div class="hero-section">
        <div class="container">
            <h1 class="page-title">Compliance Overview</h1>
            <p class="page-subtitle">CS362 Project Analysis & Compliance Status</p>
        </div>
    </div>

    <div class="container">
        <div class="stats-grid">
            <div class="stat-card primary">
                <div class="stat-icon">üìä</div>
                <div class="stat-content">
                    <h3>Overall Score</h3>
                    <div class="stat-value">{{ compliance.overallScore }}%</div>
                    <div class="stat-trend positive">+2.3% from last check</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">‚úÖ</div>
                <div class="stat-content">
                    <h3>Passed Checks</h3>
                    <div class="stat-value">{{ compliance.passedChecks }}</div>
                    <div class="stat-detail">of {{ compliance.totalChecks }} total</div>
                </div>
            </div>

            <div class="stat-card warning">
                <div class="stat-icon">‚ö†Ô∏è</div>
                <div class="stat-content">
                    <h3>Warnings</h3>
                    <div class="stat-value">{{ compliance.warnings }}</div>
                    <div class="stat-detail">Non-critical issues</div>
                </div>
            </div>

            <div class="stat-card danger">
                <div class="stat-icon">üî¥</div>
                <div class="stat-content">
                    <h3>Critical Issues</h3>
                    <div class="stat-value">{{ compliance.criticalIssues }}</div>
                    <div class="stat-detail">Requires immediate attention</div>
                </div>
            </div>
        </div>

        <div class="content-grid">
            <div class="compliance-chart">
                <h2>Compliance Distribution</h2>
                <div class="chart-container">
                    <div class="progress-circle" data-percent="{{ compliance.overallScore }}">
                        <div class="progress-text">
                            <span class="percentage">{{ compliance.overallScore }}%</span>
                            <span class="label">Compliant</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="quick-actions">
                <h2>Quick Actions</h2>
                <div class="action-buttons">
                    <a href="/compliance/detailed" class="btn btn-primary">
                        <span class="btn-icon">üìã</span>
                        View Detailed Report
                    </a>
                    <a href="/compliance/report" class="btn btn-secondary">
                        <span class="btn-icon">üìÑ</span>
                        Generate Full Report
                    </a>
                    <a href="/qa" class="btn btn-outline">
                        <span class="btn-icon">‚ùì</span>
                        Browse Q&A
                    </a>
                </div>
            </div>
        </div>

        <div class="recent-updates">
            <h2>Recent Updates</h2>
            <div class="update-timeline">
                <div class="timeline-item">
                    <div class="timeline-marker resolved"></div>
                    <div class="timeline-content">
                        <h4>Security vulnerabilities addressed</h4>
                        <p>Fixed 3 medium-priority security issues in authentication module</p>
                        <span class="timeline-date">{{ compliance.lastUpdated }}</span>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-marker warning"></div>
                    <div class="timeline-content">
                        <h4>Performance optimization needed</h4>
                        <p>Identified several database query optimizations</p>
                        <span class="timeline-date">2024-01-14</span>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-marker info"></div>
                    <div class="timeline-content">
                        <h4>Documentation updated</h4>
                        <p>Added comprehensive API documentation</p>
                        <span class="timeline-date">2024-01-13</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.compliance-overview {
    min-height: 100vh;
}

.hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 4rem 0;
    margin-bottom: 3rem;
}

.page-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.page-subtitle {
    font-size: 1.2rem;
    opacity: 0.9;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
}

.stat-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: transform 0.2s ease;
}

.stat-card:hover {
    transform: translateY(-2px);
}

.stat-card.primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.stat-card.warning {
    border-left: 4px solid #f59e0b;
}

.stat-card.danger {
    border-left: 4px solid #ef4444;
}

.stat-icon {
    font-size: 2rem;
}

.stat-value {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
}

.stat-trend {
    font-size: 0.875rem;
    opacity: 0.8;
}

.stat-trend.positive {
    color: #10b981;
}

.content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
}

.compliance-chart,
.quick-actions {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.chart-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 200px;
}

.progress-circle {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    background: conic-gradient(#667eea 0%, #667eea {{ compliance.overallScore }}%, #e5e7eb {{ compliance.overallScore }}%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.progress-circle::before {
    content: '';
    position: absolute;
    width: 120px;
    height: 120px;
    background: white;
    border-radius: 50%;
}

.progress-text {
    position: relative;
    text-align: center;
    z-index: 1;
}

.percentage {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: #667eea;
}

.label {
    font-size: 0.875rem;
    color: #6b7280;
}

.action-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
}

.btn-primary {
    background: #667eea;
    color: white;
}

.btn-secondary {
    background: #6b7280;
    color: white;
}

.btn-outline {
    border: 2px solid #667eea;
    color: #667eea;
}

.btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.recent-updates {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.update-timeline {
    margin-top: 1.5rem;
}

.timeline-item {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
    align-items: flex-start;
}

.timeline-marker {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    margin-top: 0.25rem;
    flex-shrink: 0;
}

.timeline-marker.resolved {
    background: #10b981;
}

.timeline-marker.warning {
    background: #f59e0b;
}

.timeline-marker.info {
    background: #3b82f6;
}

.timeline-content h4 {
    margin: 0 0 0.5rem 0;
    font-weight: 600;
}

.timeline-content p {
    margin: 0 0 0.5rem 0;
    color: #6b7280;
}

.timeline-date {
    font-size: 0.875rem;
    color: #9ca3af;
}

@media (max-width: 768px) {
    .content-grid {
        grid-template-columns: 1fr;
    }
    
    .page-title {
        font-size: 2rem;
    }
}
</style>
{% endblock %}