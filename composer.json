{
    "name": "cameronbrooks/charcoal-cs362",
    "description": "CS362 Compliance Report Application built with Charcoal-inspired architecture",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "locomotivemtl/charcoal-core": "^0.6.4",
        "symfony/http-foundation": "^6.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Cameron Brooks",
            "email": "brooksc3@oregonstate.edu"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "echo 'CS362 Charcoal application installed successfully!'"
        ]
    }
}
